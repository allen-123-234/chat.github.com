    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const chatWith = urlParams.get('user');
        document.getElementById('chat-user').innerText = "èˆ‡ " + chatWith + " èŠå¤©ä¸­";

        function getCurrentTime() {
            const now = new Date();
            return now.getHours().toString().padStart(2, '0') + ":" + now.getMinutes().toString().padStart(2, '0');
        }

        let imageFile = null;
        const messageInput = document.getElementById("message-input");
        const previewImg = document.getElementById("preview-img");
        const imagePreview = document.getElementById("image-preview");

        document.getElementById('file-input').addEventListener('change', function(event) {
            imageFile = event.target.files[0];
            if (imageFile) {
                previewImg.src = URL.createObjectURL(imageFile);
                imagePreview.classList.remove('hidden');
                messageInput.style.height = "80px";
                messageInput.placeholder = ""; // éš±è— placeholder
                messageInput.value = ""; // æ¸…ç©ºè¼¸å…¥æ¡†
            }
        });

        function sendMessage() {
            const messagesDiv = document.getElementById("messages");
            let messageText = messageInput.value.trim();
            if (!messageText && !imageFile) {
                alert("ä¸èƒ½ç™¼é€ç©ºç™½è¨Šæ¯ï¼");
                return;
            }

            let newMessage = document.createElement("div");
            newMessage.classList.add("message", "sent");

            if (imageFile) {
                const imageElement = document.createElement("img");
                imageElement.src = URL.createObjectURL(imageFile);
                imageElement.classList.add("img-message");
                newMessage.classList.add("img-message");
                newMessage.appendChild(imageElement);

                imageFile = null;
                imagePreview.classList.add('hidden');
                document.getElementById('file-input').value = "";
                messageInput.style.height = "40px";
            }

            if (messageText) {
                let textMessage = document.createElement("span");
                textMessage.textContent = messageText;

                // è¨­ç½®å¯¬åº¦æ ¹æ“šå­—æ•¸èª¿æ•´ï¼Œç¢ºä¿æœ€å¾Œä¸€å€‹å­—ä¸æœƒè¢«åˆ‡æ‰
                const length = messageText.length;
                if (length <= 8) {
                    newMessage.style.whiteSpace = "nowrap"; // ä¿æŒå–®è¡Œ
                    newMessage.style.minWidth = "50px";  // è¨­ç½®æœ€å°å¯¬åº¦ï¼Œé¿å…å¤ªçª„
                    newMessage.style.maxWidth = `${length * 20}px`;  // æ ¹æ“šå­—æ•¸å‹•æ…‹èª¿æ•´æœ€å¤§å¯¬åº¦
                } else {
                    newMessage.style.whiteSpace = "normal"; // å…è¨±æ›è¡Œ
                    newMessage.style.maxWidth = "75%"; // æœ€å¤§å¯¬åº¦
                }

                newMessage.appendChild(textMessage);
            }

            // é¡¯ç¤ºæ™‚é–“ï¼Œé¡¯ç¤ºåœ¨è¨Šæ¯æ¡†ä¸‹æ–¹
            const timeDiv = document.createElement("div");
            timeDiv.textContent = getCurrentTime();
            timeDiv.classList.add("time");

            messagesDiv.appendChild(newMessage);
            messagesDiv.appendChild(timeDiv); // æ™‚é–“é¡¯ç¤ºåœ¨è¨Šæ¯ä¸‹æ–¹
            messageInput.value = "";
            messageInput.placeholder = "è¼¸å…¥è¨Šæ¯..."; // æ¢å¾© placeholder
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }
    </script>

